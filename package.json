{
  "name": "@metaxia/scriptures",
  "version": "2.0.0",
  "description": "A batteries-included JavaScript library for biblical scriptures, morphology, and lexicons. Bundles core library with all official data sources.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "test -f node_modules/.bin/tsc && npm run build || true",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "bible",
    "scripture",
    "gematria",
    "hebrew",
    "greek",
    "morphology",
    "strongs",
    "kjv",
    "textus-receptus",
    "septuagint"
  ],
  "author": "Benjamin Plunkert",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/metaxiamultimedia/scriptures-js"
  },
  "bugs": {
    "url": "https://github.com/metaxiamultimedia/scriptures-js/issues"
  },
  "homepage": "https://github.com/metaxiamultimedia/scriptures-js#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@metaxia/scriptures-core": "^2.0.0",
    "@metaxia/scriptures-source-crosswire-kjv": "^2.0.0",
    "@metaxia/scriptures-source-openscriptures-ohb": "^2.0.0",
    "@metaxia/scriptures-source-stepbible-lexicon": "^2.0.0",
    "@metaxia/scriptures-source-stepbible-tagnt-tr": "^2.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  }
}
