{
  "name": "@metaxia/scriptures",
  "version": "0.1.4",
  "description": "A batteries-included JavaScript library for biblical scriptures, morphology, and lexicons. Bundles core library with all official data sources.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "test -f node_modules/.bin/tsc && npm run build || true",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "bible",
    "scripture",
    "gematria",
    "hebrew",
    "greek",
    "morphology",
    "strongs",
    "kjv",
    "textus-receptus",
    "septuagint"
  ],
  "author": "Benjamin Plunkert",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/metaxiamultimedia/scriptures-js"
  },
  "bugs": {
    "url": "https://github.com/metaxiamultimedia/scriptures-js/issues"
  },
  "homepage": "https://github.com/metaxiamultimedia/scriptures-js#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@metaxia/scriptures-core": "git+https://github.com/metaxiamultimedia/scriptures-js-core.git#v0.1.2",
    "@metaxia/scriptures-source-byztxt-tr": "git+https://github.com/metaxiamultimedia/scriptures-js-source-byztxt-tr.git#v0.1.1",
    "@metaxia/scriptures-source-crosswire-kjv": "git+https://github.com/metaxiamultimedia/scriptures-js-source-crosswire-kjv.git#v0.1.1",
    "@metaxia/scriptures-source-openscriptures-ohb": "git+https://github.com/metaxiamultimedia/scriptures-js-source-openscriptures-ohb.git#v0.1.1",
    "@metaxia/scriptures-source-stepbible-lexicon": "git+https://github.com/metaxiamultimedia/scriptures-js-source-stepbible-lexicon.git#v0.1.1",
    "@metaxia/scriptures-source-huggingface-hmcgovern-original-language-bibles-greek-stepbible-tagnt-tr": "git+https://github.com/metaxiamultimedia/scriptures-js-source-huggingface-hmcgovern-original-language-bibles-greek-stepbible-tagnt-tr.git#v0.1.3"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  }
}
